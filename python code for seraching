while True:
	print("chat with me with your requirements : ", end=' ')
	p = input()
	p = p.lower()

	if (("run" in p ) or ("open" in p )or("excess" in p) and ("chrome" in p)  :
		os.system("chrome")
	
	elif (("run" in p ) or ("open" in p ) or("excess" in p) ) and ("internet explorer" in p)  :
		os.system("start iexplore")

	elif (("run" in p ) or ("open" in p )or("excess"in p))  and ("mozilla firefox" in p)  :
		os.system("start firefox ")
	
	elif(("run" in p ) or ("open" in p)  or("excess" in p) ) and ("editor" in p ):
		print("which editor you want me to run?")
		print('	1. Notepad' +'\n'+ '	2. Wordpad'+'\n'+'	3. Code editors')	

	elif (("run" in p) or ("open" in p)  or("excess" in p) ) and (("notepad" in p) or ("notepad editor" in p)):
		os.system("notepad")

	elif (("run" in p) or ("open" in p)  or("excess"  in p) ) and (("wordpad" in p)or ("wordpad editor" in p)) :
		os.system("wordpad")
		
	elif(("run" in p ) or ("open" in p) or("excess"in p) ) and ("code editor" in p ):
		print("which code editor you want me to run?")
		print('	   1 Visual studio' +'\n'+'	   2 Intellij IDEA'+'\n'+'	   3 Atom'+'\n'+'	   4 Codeblocks')


	elif (("run" in p) or ("open" in p)  or("excess" in p) ) and ("visual studio" in p):
		os.system("code")

	elif (("run" in p) or ("open" in p) or("excess" in p)) and (("atom" in p) or ("editor" in p)):
		os.system("atom")

	elif (("run" in p) or ("open" in p) or("excess" in p)) and (("intellij idea" in p) or ("editor" in p)):
		os.system("idea64")

	elif (("run" in p) or ("open" in p) or("excess" in p)) and (("codeblocks" in p) or ("editor" in p)):
		os.system("codeblocks")


 	elif (("run" in p) or ("open" in p) or("excess" in p))  and (("wmplayer" in p) or ("player" in p)):
		os.system("wmplayer")

	elif (("run" in p) or ("open" in p) or("excess" in p))  and (("VLC" in p) or ("player" in p)):
		os.system("start vlc")

	elif (("run" in p) or ("open" in p) or("excess" in p))  and (("power media player" in p) or ("player" in p)):
		os.system("powerdvd")

	elif (("run" in p) or ("open" in p) or("excess" in p))  and (("command prompt" in p) or ("cmd" in p)):
		os.system("start cmd")
	
	elif (("run" in p) or ("open" in p) or("excess" in p))  and ("powershell ies" in p) :
		os.system("start powershell ies")
	
	elif (("run" in p) or ("open" in p) or("excess" in p))  and ("powershell" in p) :
		os.system("start powershell")

	elif (("exit" in p) or ("quit" in p)):
		break
	else:
		print("don't support")
		pyttsx3.speak("we don,t support this app check out the list of available app")
	
